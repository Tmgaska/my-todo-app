{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2022",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
